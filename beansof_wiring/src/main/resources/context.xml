<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">
    
    <bean id="studentService" class="com.example.services.StudentServices">
        <constructor-arg ref="studentRepository"/>
        <constructor-arg ref="courseRepository"/>
    </bean>  
    
    <bean id="courseService" class="com.example.services.CourseServices">
        <constructor-arg ref="courseRepository"/>
        <constructor-arg ref="studentRepository"/>
    </bean>

    <bean id="studentRepository" class="com.example.repository.StudentRepository" init-method= "initRepo"/>
    <bean id="courseRepository" class="com.example.repository.CourseRepository"/>
    
    
</beans>